{
    "scopeName": "source.comment.todo.injection",
    "injectionSelector": "L:comment",
    "patterns": [
      {
        "include": "#todo-keyword"
      }
    ],
    "repository": {
      "todo-keyword": {
        "match": "(?i)@?\\bTODO\\b(?:\\([^)]*\\))?:",
      "captures": {
        "0": { "name": "keyword.todo" }
      }
    }
  }
}
